{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": ".",
      "esModuleInterop": true,
      "allowArbitraryExtensions": true,
      "moduleResolution": "Bundler",
      "resolveJsonModule": true,
      "jsx": "react-jsx",
      "composite": true
    },
    "include": ["src/**/*"]
}
